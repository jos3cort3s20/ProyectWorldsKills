<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Activitys.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal"
         >

        <ImageButton
            android:id="@+id/btnImEscritor"
            android:layout_width="10sp"
            android:layout_height="40sp"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="13sp"
            android:background="@color/Blue"
            android:onClick="funcionButton"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/btnImPintor"
            android:layout_width="10sp"
            android:layout_height="40sp"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="13sp"
            android:background="@color/GreenYellow"
            android:onClick="funcionButton"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/btnImEscultor"
            android:layout_width="10sp"
            android:layout_height="40sp"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="13sp"
            android:background="@color/Orange"
            android:onClick="funcionButton"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/btnImRegistro"
            android:layout_marginHorizontal="13sp"
            android:layout_width="10sp"
            android:layout_height="40sp"
            android:layout_gravity="center_vertical"
            android:onClick="funcionButton"

            android:background="@color/HotPink"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/btnImSalir"
            android:layout_width="10sp"
            android:layout_height="40sp"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="13sp"
            android:onClick="funcionButton"
            android:background="@color/Red"
            android:layout_weight="1"/>


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80"
        android:orientation="horizontal"
        >

        <FrameLayout
            android:id="@+id/frameInter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></FrameLayout>

</LinearLayout>


</LinearLayout>